{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "module": "es6",
        "jsx": "react",
        "target": "es6",
        "lib": [
            "es2019",
            "dom"
        ],
        "allowJs": true,
        "alwaysStrict": true,
        "strict": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules"]
}
